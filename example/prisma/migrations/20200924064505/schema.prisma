generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "../node_modules/typegraphql-prisma/generator.js"
  output   = "../src/generated/type-graphql"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model User {
  id        String   @default(cuid()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  firstname String?
  lastname  String?
  role      Role
}

model Configuration {
  id           String   @default(cuid()) @id
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  name         String
  serialNumber String
  type         String
  manufacturer String
  model        String
  expires      String
  location     String
  contact      String
}

enum Role {
  ADMIN
  USER
}
